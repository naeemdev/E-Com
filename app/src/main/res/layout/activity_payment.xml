<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical"
    tools:context=".Actvity.ActivityPayment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/ly_back"
            android:layout_width="@dimen/height_50"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow" />

        </RelativeLayout>

        <com.appsolace.estore.View.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_payment"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_17"
            app:fontName="@string/ubuntu_m" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_status_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_50"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgcolor2"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:src="@drawable/cod" />

            <com.appsolace.estore.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center"
                android:text="@string/cod1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                app:fontName="@string/ubuntu_m" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center|right">

                <ImageView
                    android:id="@+id/image_status"
                    android:layout_width="@dimen/height_30"
                    android:layout_height="@dimen/height_30"
                    android:background="@drawable/status_delivered"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray" />

    </LinearLayout>

    <com.appsolace.estore.View.CustomTextView
        android:id="@+id/txt_place_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/height_50"
        android:layout_marginRight="@dimen/height_50"
        android:layout_marginTop="@dimen/height_50"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/place_order"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_17"
        app:fontName="@string/ubuntu_m" />

</LinearLayout>
